<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_modify_password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.jsxl.selfexam.activity.ModifyPasswordActivity">
    <include layout="@layout/title_bar" />
    <View
        android:layout_width="match_parent"
        android:layout_height="32dp"/>
    <LinearLayout
        android:id="@+id/ll_old_password"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="18dp">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="18dp"
            android:src="@drawable/icon_psw" />

        <EditText
            android:id="@+id/et_modify_old_password"
            style="@style/register_login_edittext_attribute"
            android:layout_marginLeft="12dp"
            android:hint="请输入旧密码"
            android:inputType="textPassword" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="18dp">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="18dp"
            android:src="@drawable/icon_psw" />

        <EditText
            android:id="@+id/et_modify_new_password"
            style="@style/register_login_edittext_attribute"
            android:layout_marginLeft="12dp"
            android:hint="请输入新密码"
            android:inputType="textPassword" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="18dp">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="18dp"
            android:src="@drawable/icon_psw" />

        <EditText
            android:id="@+id/et_modify_new_confirmpassword"
            style="@style/register_login_edittext_attribute"
            android:layout_marginLeft="12dp"
            android:hint="请确认新密码"
            android:inputType="textPassword" />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_submit"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="66dp"
        android:background="@drawable/login_register_bg"
        android:gravity="center"
        android:text="完成"
        android:textColor="#ffffff"
        android:textSize="18sp" />
</LinearLayout>
