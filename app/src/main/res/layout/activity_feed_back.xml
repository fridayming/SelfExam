<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_feed_bacj"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.jsxl.selfexam.activity.FeedBackActivity">

    <include layout="@layout/title_bar" />

    <EditText
        android:id="@+id/et_feedback"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/feedback_edittext_bg"
        android:gravity="left|top"
        android:hint="请简要描述您的问题或意见"
        android:paddingLeft="8dp"
        android:paddingTop="16dp"
        android:textColor="#666666"
        android:textColorHint="#999999"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/tv_text_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="12dp"
        android:layout_marginTop="8dp"
        android:textColor="#999999"
        android:text="0/180" />

    <TextView
        android:id="@+id/tv_submit"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/login_register_bg"
        android:gravity="center"
        android:text="提交"
        android:textColor="#ffffff"
        android:textSize="18sp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:textSize="14sp"
        android:layout_marginTop="18dp"
        android:textColor="#666666"
        android:text="我们会仔细阅读您的反馈，并尽早给您回复。如果有紧急问题需要咨询和协助，可以拨打客服电话010-62384662。感谢您的理解与支持！"/>
</LinearLayout>
