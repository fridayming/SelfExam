<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tc="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jsxl.selfexam.fragment.MyFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:background="@drawable/my_head_bg">

        <ImageView
            android:id="@+id/my_iv_head"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:layout_centerInParent="true"
            android:src="@drawable/icon_default_head" />

        <TextView
            android:id="@+id/my_tv_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/my_iv_head"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:text="点击头像登录"
            android:textColor="#ffffff"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/my_iv_news"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="2dp"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:src="@drawable/icon_news" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_exam_type"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <com.jsxl.selfexam.widget.DrawableTextView
            style="@style/my_text_attribute"
            android:drawableLeft="@drawable/icon_exam_type"
            android:text="考试类型"
            tc:drawableHeight="16dp"
            tc:drawableWidth="16dp" />

        <com.jsxl.selfexam.widget.DrawableTextView
            android:id="@+id/my_exam_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="24dp"
            android:drawablePadding="12dp"
            android:drawableRight="@drawable/icon_my_back"
            android:gravity="center"
            android:text="高起专"
            android:textColor="#666666"
            android:textSize="14sp"
            tc:drawableHeight="14dp"
            tc:drawableWidth="7dp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f2f2f2" />

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#f8f8f8" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f2f2f2" />

    <RelativeLayout
        android:id="@+id/rl_feedback"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <com.jsxl.selfexam.widget.DrawableTextView
            style="@style/my_text_attribute"
            android:drawableLeft="@drawable/icon_feedback"
            android:text="意见反馈"
            tc:drawableHeight="16dp"
            tc:drawableWidth="16dp" />

        <ImageView
            android:layout_width="7dp"
            android:layout_height="14dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="24dp"
            android:src="@drawable/icon_my_back" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="52dp"
        android:background="#f2f2f2" />

    <RelativeLayout
        android:id="@+id/rl_contact_us"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <com.jsxl.selfexam.widget.DrawableTextView
            style="@style/my_text_attribute"
            android:drawableLeft="@drawable/icon_contact_us"
            android:text="联系我们"
            tc:drawableHeight="16dp"
            tc:drawableWidth="16dp" />

        <ImageView
            android:layout_width="7dp"
            android:layout_height="14dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="24dp"
            android:src="@drawable/icon_my_back" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f2f2f2" />

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#f8f8f8" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f2f2f2" />

    <RelativeLayout
        android:id="@+id/rl_set"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <com.jsxl.selfexam.widget.DrawableTextView
            style="@style/my_text_attribute"
            android:drawableLeft="@drawable/icon_set"
            android:text="设置"
            tc:drawableHeight="16dp"
            tc:drawableWidth="16dp" />

        <ImageView
            android:layout_width="7dp"
            android:layout_height="14dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="24dp"
            android:src="@drawable/icon_my_back" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f2f2f2" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f8f8f8" />
</LinearLayout>
