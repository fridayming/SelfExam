<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sign_in"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.jsxl.selfexam.activity.SignInActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <include layout="@layout/title_bar" />

        <TextView
            android:id="@+id/tv_signin_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:padding="8dp"
            android:text="注册"
            android:textColor="#ffffff"
            android:textSize="20dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="66dp">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="18dp"
            android:src="@drawable/icon_phone" />

        <EditText
            android:id="@+id/et_signin_phone"
            style="@style/register_login_edittext_attribute"
            android:layout_marginLeft="12dp"
            android:hint="请输入已绑定手机号"
            android:inputType="phone" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:background="#F0F0F0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="18dp">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="18dp"
            android:src="@drawable/icon_psw" />

        <EditText
            android:id="@+id/et_signin_password"
            style="@style/register_login_edittext_attribute"
            android:layout_marginLeft="12dp"
            android:hint="请输入密码"
            android:inputType="textPassword" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:background="#F0F0F0" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="18dp">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="18dp"
                android:src="@drawable/icon_verification" />

            <EditText
                android:id="@+id/et_signin_code"
                style="@style/register_login_edittext_attribute"
                android:layout_width="160dp"
                android:layout_marginLeft="12dp"
                android:hint="请输入右侧验证码"
                android:inputType="phone" />

            <com.jsxl.selfexam.widget.CheckView
                android:id="@+id/iv_signin_code"
                android:layout_width="120px"
                android:layout_height="57px"
                android:layout_gravity="center_vertical"
                android:background="@drawable/sign_code_bg" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_retrieve_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:padding="6dp"
            android:text="找回密码"
            android:textColor="#f14143"
            android:textSize="14sp" />
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:background="#F0F0F0" />

    <TextView
        android:id="@+id/tv_signin"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="66dp"
        android:alpha="0.6"
        android:background="@drawable/login_register_bg"
        android:gravity="center"
        android:text="登录"
        android:textColor="#ffffff"
        android:textSize="18sp" />
</LinearLayout>
