<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tc="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_note_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dp"
        android:text="#33333333"
        android:textColor="#333333"
        android:textSize="16sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/icon_note_exp_bg"
            android:gravity="center"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="答案"
            android:textColor="#000000"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/tv_note_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:padding="4dp"
            android:text="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
            android:textColor="@color/colorStatus"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/icon_note_exp_bg"
            android:gravity="center"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="解析"
            android:textColor="#000000"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/tv_note_explain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:padding="4dp"
            android:text="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
            android:textColor="#333333"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/icon_note_exp_bg"
            android:gravity="center"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="笔记"
            android:textColor="#000000"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/tv_note_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:padding="4dp"
            android:text="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
            android:textColor="#333333"
            android:textSize="16sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_note_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:paddingLeft="16dp"
            android:text="2017-05-09"
            android:textColor="#666666" />
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_weight="1">

            <com.jsxl.selfexam.widget.DrawableTextView
                android:id="@+id/tv_note_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:drawableLeft="@drawable/icon_note_update"
                android:drawablePadding="6dp"
                android:text="修改"
                android:textColor="#666666"
                tc:drawableHeight="14dp"
                tc:drawableWidth="14dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <com.jsxl.selfexam.widget.DrawableTextView
                android:id="@+id/tv_note_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:drawableLeft="@drawable/icon_note_del"
                android:drawablePadding="4dp"
                android:text="删除"
                android:textColor="#666666"
                tc:drawableHeight="14dp"
                tc:drawableWidth="14dp" />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>