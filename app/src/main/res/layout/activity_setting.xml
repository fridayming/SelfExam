<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tc="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f8f8"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.jsxl.selfexam.activity.SettingActivity">

    <include layout="@layout/title_bar" />

    <RelativeLayout
        android:id="@+id/rl_setting_info"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:text="个人资料"
            android:textColor="#000000" />

        <com.jsxl.selfexam.widget.DrawableTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="24dp"
            android:drawablePadding="12dp"
            android:drawableRight="@drawable/icon_my_back"
            android:gravity="center"
            android:text="修改/完善"
            android:textColor="#666666"
            android:textSize="14sp"
            tc:drawableHeight="14dp"
            tc:drawableWidth="7dp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dedede" />

    <RelativeLayout
        android:id="@+id/rl_setting_version"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:text="版本信息"
            android:textColor="#000000" />

        <com.jsxl.selfexam.widget.DrawableTextView
            android:id="@+id/tv_setting_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="24dp"
            android:drawablePadding="12dp"
            android:drawableRight="@drawable/icon_my_back"
            android:gravity="center"
            android:textColor="#666666"
            android:textSize="14sp"
            tc:drawableHeight="14dp"
            tc:drawableWidth="7dp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dedede" />

    <RelativeLayout
        android:id="@+id/rl_setting_modifypsw"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:text="修改密码"
            android:textColor="#000000" />

        <com.jsxl.selfexam.widget.DrawableTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="24dp"
            android:drawablePadding="12dp"
            android:drawableRight="@drawable/icon_my_back"
            android:gravity="center"
            android:textColor="#666666"
            android:textSize="14sp"
            tc:drawableHeight="14dp"
            tc:drawableWidth="7dp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dedede" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:text="消息提醒"
            android:textColor="#000000" />

        <ToggleButton
            android:id="@+id/tb_setting_news"
            android:layout_width="44dp"
            android:layout_height="21dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="24dp"
            android:background="@drawable/icon_tb_state"
            android:textOff=""
            android:textOn="" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dedede" />
    <TextView
        android:id="@+id/tv_setting_signout"
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#ffffff"
        android:text="退出登录"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="#ff2121"/>
</LinearLayout>
