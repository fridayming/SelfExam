<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tc="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_exam_type"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.jsxl.selfexam.activity.ExamTypeActivity">

    <include layout="@layout/title_bar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/feedback_edittext_bg">


        <com.jsxl.selfexam.widget.DrawableTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="24dp"
            android:drawableLeft="@drawable/icon_change_exam"
            android:drawablePadding="4dp"
            android:text="选择报考类型"
            android:textColor="@color/colorStatus"
            tc:drawableHeight="16dp"
            tc:drawableWidth="16dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="64dp"
            android:background="#f0f0f0" />

        <RadioGroup
            android:id="@+id/rg_register"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="88dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <RadioButton
                    android:id="@+id/rb_register1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:button="@null"
                    android:drawableLeft="@drawable/icon_judge_state"
                    android:drawablePadding="6dp"
                    android:text="专升本"
                    android:textColor="#000000" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <RadioButton
                    android:id="@+id/rb_register2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:button="@null"
                    android:drawableLeft="@drawable/icon_judge_state"
                    android:drawablePadding="6dp"
                    android:text="高起本"
                    android:textColor="#000000" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <RadioButton
                    android:id="@+id/rb_register3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:button="@null"
                    android:drawableLeft="@drawable/icon_judge_state"
                    android:drawablePadding="6dp"
                    android:text="高起专"
                    android:textColor="#000000" />
            </RelativeLayout>

        </RadioGroup>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_submit"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/login_register_bg"
        android:gravity="center"
        android:text="保存"
        android:textColor="#ffffff"
        android:textSize="18sp" />
</LinearLayout>
