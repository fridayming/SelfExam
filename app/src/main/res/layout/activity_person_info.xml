<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tc="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_person_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    android:fitsSystemWindows="true"
    
    android:orientation="vertical"
    tools:context="com.jsxl.selfexam.activity.PersonInfoActivity">

    <include layout="@layout/title_bar" />
    <RelativeLayout
        android:id="@+id/rl_person_head"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:background="#ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:text="头像"
            android:textColor="#000000" />

        <com.jsxl.selfexam.widget.DrawableTextView
            android:id="@+id/tv_person_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="24dp"
            android:drawablePadding="12dp"
            android:drawableRight="@drawable/icon_my_back"
            android:gravity="center"
            android:textColor="#666666"
            android:textSize="14sp"
            tc:drawableHeight="14dp"
            tc:drawableWidth="7dp" />
        <ImageView
            android:id="@+id/iv_person_head"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/tv_person_head"
            android:src="@drawable/icon_head_default"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dedede" />
    <RelativeLayout
        android:id="@+id/rl_person_name"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:text="昵称"
            android:textColor="#000000" />

        <com.jsxl.selfexam.widget.DrawableTextView
            android:id="@+id/tv_person_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="24dp"
            android:drawablePadding="12dp"
            android:drawableRight="@drawable/icon_my_back"
            android:gravity="center"
            android:textColor="#666666"
            android:textSize="14sp"
            tc:drawableHeight="14dp"
            tc:drawableWidth="7dp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dedede" />
    <RelativeLayout
        android:id="@+id/rl_person_age"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:text="年龄"
            android:textColor="#000000" />

        <com.jsxl.selfexam.widget.DrawableTextView
            android:id="@+id/tv_person_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="24dp"
            android:drawablePadding="12dp"
            android:drawableRight="@drawable/icon_my_back"
            android:gravity="center"
            android:textColor="#666666"
            android:textSize="14sp"
            tc:drawableHeight="14dp"
            tc:drawableWidth="7dp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dedede" />
    <RelativeLayout
        android:id="@+id/rl_person_sex"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:text="性别"
            android:textColor="#000000" />

        <com.jsxl.selfexam.widget.DrawableTextView
            android:id="@+id/tv_person_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="24dp"
            android:drawablePadding="12dp"
            android:drawableRight="@drawable/icon_my_back"
            android:gravity="center"
            android:textColor="#666666"
            android:textSize="14sp"
            tc:drawableHeight="14dp"
            tc:drawableWidth="7dp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dedede" />
    <RelativeLayout
        android:id="@+id/rl_person_phone"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:text="手机号"
            android:textColor="#000000" />

        <com.jsxl.selfexam.widget.DrawableTextView
            android:id="@+id/tv_person_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="24dp"
            android:drawablePadding="12dp"
            android:drawableRight="@drawable/icon_my_back"
            android:gravity="center"
            android:textColor="#666666"
            android:textSize="14sp"
            tc:drawableHeight="14dp"
            tc:drawableWidth="7dp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dedede" />
</LinearLayout>
